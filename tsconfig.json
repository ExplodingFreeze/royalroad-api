{
    "compilerOptions": {
        "module": "Node16",
        "moduleResolution": "Node16",
        "target": "ES2022",
        "strict": true,
        "removeComments": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "sourceMap": true,
        "typeRoots": ["src/typings"],
        "allowSyntheticDefaultImports": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}
